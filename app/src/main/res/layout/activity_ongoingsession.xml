<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toggletoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@@style/ThemeOverlay.AppCompat.Dark"
        android:layout_alignParentTop="true"/>


    <android.support.v7.widget.CardView
        android:id="@+id/static_card_with_data"
        android:layout_below="@+id/toggletoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Session Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/meeting_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Current Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Persistent Systems Limited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:text="Current Date and Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/static_card_with_data"
        android:id="@+id/ongoingsession_rv"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/miccontainer"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_mic_white_24dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</RelativeLayout>